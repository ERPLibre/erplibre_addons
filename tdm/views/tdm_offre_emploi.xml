<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tdm_offre_emploi_view_form" model="ir.ui.view">
        <field name="name">tdm_offre_emploi_form</field>
        <field name="model">tdm.offre.emploi</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <header>
                    <field name="stage_id" widget="statusbar" clickable="True" options="{'fold_field': 'fold'}" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div name="button_box" class="oe_button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field
                                name="active"
                                widget="boolean_button"
                                options="{&quot;terminology&quot;: &quot;archive&quot;}"
                            />
                        </button>
                        <button name="toggle_website_published" class="oe_stat_button" type="object" icon="fa-globe">
                            <field
                                name="website_published"
                                widget="boolean_button"
                                options='{"terminology": {"string_true": "Published", "hover_false": "Publish"}}'
                            />
                        </button>
                        <button name="toggle_approbation" class="oe_stat_button" type="object" icon="fa-check">
                            <field
                                name="approbation"
                                widget="boolean_button"
                                options='{"terminology": {"string_true": "Approuved", "hover_false": "Approuve"}}'
                            />
                        </button>
                    </div>
                    <group>
                        <group string="Info">
                            <field name="secteur_activite_ids" widget="many2many_tags" />
                            <field name="type_poste_ids" widget="many2many_tags" />
                            <field name="category_id" />
                            <field name="tag_ids" widget="many2many_tags" />
                        </group>
                        <group string="Autre">
                            <field name="evaluation_id" />
                            <field name="partner_employeur_id" />
                            <field name="localisation" />
                        </group>
                        <group string="Besoin">
                            <field name="salaire" />
                            <field name="is_temps_pleins" />
                            <field name="nb_hour_per_week" />
                            <field name="avantage_social" />
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" string="Description du poste" />
                        <field name="principal_responsabilite" />
                        <field name="description_entreprise" />
                        <field name="qualification_requise" />
                        <field name="information_supplementaire" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" options="{'post_refresh': 'recipients'}" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="tdm_offre_emploi_view_graph" model="ir.ui.view">
        <field name="name">tdm_offre_emploi_graph</field>
        <field name="model">tdm.offre.emploi</field>
        <field name="arch" type="xml">
            <graph string="Tdm offre emploi">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="tdm_offre_emploi_view_kanban" model="ir.ui.view">
        <field name="name">tdm_offre_emploi_kanban</field>
        <field name="model">tdm.offre.emploi</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="tdm_offre_emploi_view_pivot" model="ir.ui.view">
        <field name="name">tdm_offre_emploi_pivot</field>
        <field name="model">tdm.offre.emploi</field>
        <field name="arch" type="xml">
            <pivot string="Tdm offre emploi">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="tdm_offre_emploi_view_search" model="ir.ui.view">
        <field name="name">tdm_offre_emploi_search</field>
        <field name="model">tdm.offre.emploi</field>
        <field name="arch" type="xml">
            <search string="Tdm offre emploi">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <group expand="0" string="Group By">
                    <filter string="Stage" name="stage" context="{'group_by':'stage_id'}" />
                    <filter string="Évaluation" name="evaluation_id" context="{'group_by':'evaluation_id'}" />
                    <filter string="Catégorie" name="category_id" context="{'group_by':'category_id'}" />
                    <filter
                        string="Employeur"
                        name="partner_employeur_id"
                        context="{'group_by':'partner_employeur_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="tdm_offre_emploi_view_tree" model="ir.ui.view">
        <field name="name">tdm_offre_emploi_tree</field>
        <field name="model">tdm.offre.emploi</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="tdm_offre_emploi_offre_emploi_action_window"
        name="Emploi"
        res_model="tdm.offre.emploi"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
