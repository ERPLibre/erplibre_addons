<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tdm_travailleur_stage_view_form" model="ir.ui.view">
        <field name="name">tdm_travailleur_stage_form</field>
        <field name="model">tdm.travailleur.stage</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="sequence" />
                        <field name="is_init" />
                        <field name="fold" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tdm_travailleur_stage_view_graph" model="ir.ui.view">
        <field name="name">tdm_travailleur_stage_graph</field>
        <field name="model">tdm.travailleur.stage</field>
        <field name="arch" type="xml">
            <graph string="Tdm travailleur stage">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="tdm_travailleur_stage_view_kanban" model="ir.ui.view">
        <field name="name">tdm_travailleur_stage_kanban</field>
        <field name="model">tdm.travailleur.stage</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="tdm_travailleur_stage_view_pivot" model="ir.ui.view">
        <field name="name">tdm_travailleur_stage_pivot</field>
        <field name="model">tdm.travailleur.stage</field>
        <field name="arch" type="xml">
            <pivot string="Tdm travailleur stage">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="tdm_travailleur_stage_view_search" model="ir.ui.view">
        <field name="name">tdm_travailleur_stage_search</field>
        <field name="model">tdm.travailleur.stage</field>
        <field name="arch" type="xml">
            <search string="Tdm travailleur stage">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
            </search>
        </field>
    </record>

    <record id="tdm_travailleur_stage_view_tree" model="ir.ui.view">
        <field name="name">tdm_travailleur_stage_tree</field>
        <field name="model">tdm.travailleur.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="tdm_travailleur_stage_travailleur_stage_action_window"
        name="Travailleur stage"
        res_model="tdm.travailleur.stage"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
