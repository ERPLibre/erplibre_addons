<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_devops_test_conf_form" model="ir.ui.view">
        <field name="name">devops.test form</field>
        <field name="model">devops.test</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_run_erplibre_test" string="Test all" type="object" class="oe_highlight" />
                    <button
                        name="action_run_erplibre_test"
                        string="Test all debug"
                        type="object"
                        class="oe_highlight"
                        context="{'default_debug': True}"
                    />
                </header>
                <div class="oe_title">
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="devops_workspace_ids" />
                    </group>
                </group>
                <notebook>
                    <page name="log" string="Docker">
                        <group string="Log">
                            <field name="log" />
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_devops_test_conf_search" model="ir.ui.view">
        <field name="name">devops.test search</field>
        <field name="model">devops.test</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="view_devops_test_conf_tree" model="ir.ui.view">
        <field name="name">devops.test tree</field>
        <field name="model">devops.test</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="is_executed" />
            </tree>
        </field>
    </record>

    <act_window
        id="action_devops_test_conf_form"
        name="Automated devops_tests"
        res_model="devops.test"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
