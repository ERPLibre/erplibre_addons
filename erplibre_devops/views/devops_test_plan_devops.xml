<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="devops_test_plan_devops_view_form" model="ir.ui.view">
        <field name="name">devops_test_plan_devops_form</field>
        <field name="model">devops.test.plan.devops</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <header>
                    <button name="action_run_test" string="Run test" type="object" class="oe_highlight" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="workspace_id" />
                        <field name="global_success" />
                        <field name="exec_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="devops_test_plan_devops_view_graph" model="ir.ui.view">
        <field name="name">devops_test_plan_devops_graph</field>
        <field name="model">devops.test.plan.devops</field>
        <field name="arch" type="xml">
            <graph string="Devops test plan devops">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="devops_test_plan_devops_view_kanban" model="ir.ui.view">
        <field name="name">devops_test_plan_devops_kanban</field>
        <field name="model">devops.test.plan.devops</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="devops_test_plan_devops_view_pivot" model="ir.ui.view">
        <field name="name">devops_test_plan_devops_pivot</field>
        <field name="model">devops.test.plan.devops</field>
        <field name="arch" type="xml">
            <pivot string="Devops test plan devops">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="devops_test_plan_devops_view_search" model="ir.ui.view">
        <field name="name">devops_test_plan_devops_search</field>
        <field name="model">devops.test.plan.devops</field>
        <field name="arch" type="xml">
            <search string="Devops test plan devops">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
            </search>
        </field>
    </record>

    <record id="devops_test_plan_devops_view_tree" model="ir.ui.view">
        <field name="name">devops_test_plan_devops_tree</field>
        <field name="model">devops.test.plan.devops</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="global_success" />
            </tree>
        </field>
    </record>

    <act_window
        id="devops_test_plan_devops_test_plan_devops_action_window"
        name="Test plan devops"
        res_model="devops.test.plan.devops"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
