<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="devops_plan_type_view_form" model="ir.ui.view">
        <field name="name">devops_plan_type_form</field>
        <field name="model">devops.plan.type</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="devops_plan_type_view_graph" model="ir.ui.view">
        <field name="name">devops_plan_type_graph</field>
        <field name="model">devops.plan.type</field>
        <field name="arch" type="xml">
            <graph string="Devops plan type">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="devops_plan_type_view_kanban" model="ir.ui.view">
        <field name="name">devops_plan_type_kanban</field>
        <field name="model">devops.plan.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="devops_plan_type_view_pivot" model="ir.ui.view">
        <field name="name">devops_plan_type_pivot</field>
        <field name="model">devops.plan.type</field>
        <field name="arch" type="xml">
            <pivot string="Devops plan type">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="devops_plan_type_view_search" model="ir.ui.view">
        <field name="name">devops_plan_type_search</field>
        <field name="model">devops.plan.type</field>
        <field name="arch" type="xml">
            <search string="Devops plan type">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
            </search>
        </field>
    </record>

    <record id="devops_plan_type_view_tree" model="ir.ui.view">
        <field name="name">devops_plan_type_tree</field>
        <field name="model">devops.plan.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="devops_plan_type_plan_type_action_window"
        name="Plan type"
        res_model="devops.plan.type"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
