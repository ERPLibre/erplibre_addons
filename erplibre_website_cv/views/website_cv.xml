<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website_cv_view_tree" model="ir.ui.view">
        <field name="name">website_cv_tree</field>
        <field name="model">website.cv</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="address" />
                <field name="phone" />
                <field name="email" />
            </tree>
        </field>
    </record>
    <record id="website_cv_view_form" model="ir.ui.view">
        <field name="name">website_cv_form</field>
        <field name="model">website.cv</field>
        <field name="arch" type="xml">
            <form string="Informations">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="address" />
                        <field name="phone" />
                        <field name="email" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <act_window
        id="website_cv_website_cv_action_window"
        name="Website CV"
        res_model="website.cv"
        view_mode="tree,form"
    />
</odoo>