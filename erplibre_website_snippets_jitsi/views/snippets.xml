<odoo>
  <!-- Snippet Content-->
  <template id="s_jitsi" name="Jitsi Meet">
    <section>
      <div>
        <p class="loading">Loading ...</p>
      </div>
    </section>
  </template>

  <!-- Add snippets to menu -->
  <template id="add_snippet_structure_to_menu" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
      <t t-snippet="erplibre_website_snippets_jitsi.s_jitsi" t-thumbnail="/erplibre_website_snippets_jitsi/static/src/img/web_cam.jpg"/>
    </xpath>
  </template>

  <!-- Add stylesheet & javascript-->
  <template id="assets_frontend_erplibre_website_snippets_cards" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets_jitsi/static/src/scss/snippet_jitsi.scss" />
    </xpath>

    <xpath expr="//script[last()]" position="after">
      <script type="text/javascript" src="/erplibre_website_snippets_jitsi/static/src/js/website_snippet_jitsi.js"/>
      <script src="https://meet.jit.si/external_api.js" X-crossorigin="anonymous"></script>
    </xpath>
  </template>
</odoo>
