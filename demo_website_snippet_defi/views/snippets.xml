<odoo>
    <!-- Snippets -->
    <template id="s_demo_website_snippet_defi" name="Demo Website Snippet">
        <section class="o_demo_website_snippet_defi">
            <div class="container">
                <div class="text-center demo_website_snippet_defi_value">Hello</div>
                <input type="text" id="fds"></input><button>coucou</button>
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="demo_website_snippet_defi.s_demo_website_snippet_defi"
                t-thumbnail="/demo_website_snippet_defi/static/description/icon.png"
            />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/demo_website_snippet_defi/static/src/scss/demo_website_snippet_defi.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/demo_website_snippet_defi/static/src/js/website.demo_website_snippet_defi.animation.js"
            />
        </xpath>
    </template>
</odoo>
