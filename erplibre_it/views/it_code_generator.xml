<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="it_code_generator_view_form" model="ir.ui.view">
        <field name="name">it_code_generator_form</field>
        <field name="model">it.code_generator</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <header>
                    <button class="oe_highlight" name="action_generate_code" string="Generate" type="object" />
                    <button class="oe_highlight" name="action_clear_all_code" string="Clear" type="object" />
                    <button class="oe_highlight" name="action_git_commit_all_code" string="Git commit" type="object" />
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="it_workspace_id"/>
                    </group>
                    <group>
                        <field name="module_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="it_code_generator_view_graph" model="ir.ui.view">
        <field name="name">it_code_generator_graph</field>
        <field name="model">it.code_generator</field>
        <field name="arch" type="xml">
            <graph string="It code generator">
                <field name="name" type="row"/>
                <field name="it_workspace_id" type="row"/>
            </graph>
        </field>
    </record>

    <record id="it_code_generator_view_kanban" model="ir.ui.view">
        <field name="name">it_code_generator_kanban</field>
        <field name="model">it.code_generator</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="it_workspace_id"/>
                <field name="module_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="it_workspace_id"/>
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="module_ids"/>
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="it_code_generator_view_pivot" model="ir.ui.view">
        <field name="name">it_code_generator_pivot</field>
        <field name="model">it.code_generator</field>
        <field name="arch" type="xml">
            <pivot string="It code generator">
                <field name="name" type="row"/>
                <field name="it_workspace_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="it_code_generator_view_search" model="ir.ui.view">
        <field name="name">it_code_generator_search</field>
        <field name="model">it.code_generator</field>
        <field name="arch" type="xml">
            <search string="It code generator">
                <filter domain="[('name','!=',False)]" name="name" string="Name"/>
                <filter domain="[('it_workspace_id','!=',False)]" name="it_workspace_id" string="It Workspace"/>
                <filter domain="[('module_ids','!=',False)]" name="module_ids" string=""/>
            </search>
        </field>
    </record>

    <record id="it_code_generator_view_tree" model="ir.ui.view">
        <field name="name">it_code_generator_tree</field>
        <field name="model">it.code_generator</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="it_workspace_id"/>
                <field name="module_ids"/>
            </tree>
        </field>
    </record>

    <act_window id="it_code_generator_code_generator_action_window" name="Code generator" res_model="it.code_generator" view_mode="kanban,tree,pivot,graph,form"/>

</odoo>
