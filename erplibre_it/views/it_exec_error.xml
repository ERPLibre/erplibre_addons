<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="it_exec_error_view_form" model="ir.ui.view">
        <field name="name">it_exec_error_form</field>
        <field name="model">it.exec.error</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="toggle_active" type="object" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group string="IT">
                        <field name="it_workspace" />
                        <field name="it_exec_bundle_ids" />
                        <field name="it_exec_ids" />
                    </group>
                    <group>
                        <group string="Info">
                            <field name="description" />
                        </group>
                        <group string="Date">
                            <field name="create_date" />
                            <field name="write_date" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Traceback">
                            <field name="escaped_tb" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="it_exec_error_view_graph" model="ir.ui.view">
        <field name="name">it_exec_error_graph</field>
        <field name="model">it.exec.error</field>
        <field name="arch" type="xml">
            <graph string="It code generator module model field">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="it_exec_error_view_kanban" model="ir.ui.view">
        <field name="name">it_exec_error_kanban</field>
        <field name="model">it.exec.error</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="it_exec_error_view_pivot" model="ir.ui.view">
        <field name="name">it_exec_error_pivot</field>
        <field name="model">it.exec.error</field>
        <field name="arch" type="xml">
            <pivot string="It code generator new project">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="it_exec_error_view_search" model="ir.ui.view">
        <field name="name">it_exec_error_search</field>
        <field name="model">it.exec.error</field>
        <field name="arch" type="xml">
            <search string="It code generator module model field">
                <field name="name" string="Name" />
                <field name="active" />
                <filter name="active" string="Active" domain="[('active','=',True)]" help="Show active" />
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]" help="Show inactive" />
                <group expand="1" string="Group By">
                    <filter string="Workspace" name="workspace" context="{'group_by':'it_workspace'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="it_exec_error_view_tree" model="ir.ui.view">
        <field name="name">it_exec_error_tree</field>
        <field name="model">it.exec.error</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="escaped_tb" />
                <field name="it_workspace" />
            </tree>
        </field>
    </record>

    <act_window
        id="it_exec_error_action_window"
        name="IT executions"
        res_model="it.exec.error"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
