<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="it_db_image_view_form" model="ir.ui.view">
        <field name="name">it_db_image_form</field>
        <field name="model">it.db.image</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="path"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="it_db_image_view_graph" model="ir.ui.view">
        <field name="name">it_db_image_graph</field>
        <field name="model">it.db.image</field>
        <field name="arch" type="xml">
            <graph string="It db image">
                <field name="name" type="row"/>
                <field name="path" type="row"/>
            </graph>
        </field>
    </record>

    <record id="it_db_image_view_kanban" model="ir.ui.view">
        <field name="name">it_db_image_kanban</field>
        <field name="model">it.db.image</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="path"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="path"/>
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="it_db_image_view_pivot" model="ir.ui.view">
        <field name="name">it_db_image_pivot</field>
        <field name="model">it.db.image</field>
        <field name="arch" type="xml">
            <pivot string="It db image">
                <field name="name" type="row"/>
                <field name="path" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="it_db_image_view_search" model="ir.ui.view">
        <field name="name">it_db_image_search</field>
        <field name="model">it.db.image</field>
        <field name="arch" type="xml">
            <search string="It db image">
                <filter domain="[('name','!=',False)]" name="name" string="Name"/>
                <filter domain="[('path','!=',False)]" name="path" string="Path"/>
            </search>
        </field>
    </record>

    <record id="it_db_image_view_tree" model="ir.ui.view">
        <field name="name">it_db_image_tree</field>
        <field name="model">it.db.image</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="path"/>
            </tree>
        </field>
    </record>

    <act_window id="it_db_image_db_image_action_window" name="Db image" res_model="it.db.image" view_mode="kanban,tree,pivot,graph,form"/>

</odoo>
