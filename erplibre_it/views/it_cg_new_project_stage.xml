<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="it_cg_new_project_stage_search" model="ir.ui.view">
        <field name="name">Stage - Search</field>
        <field name="model">it.cg.new_project.stage</field>
        <field name="arch" type="xml">
            <search string="Stage Search">
                <field name="name" />
                <field name="sequence" />
            </search>
        </field>
    </record>

    <record id="it_cg_new_project_stage_tree" model="ir.ui.view">
        <field name="name">it.cg.new_project.stage.tree</field>
        <field name="model">it.cg.new_project.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="it_cg_new_project_stage_form" model="ir.ui.view">
        <field name="name">it.cg.new_project.stage.form</field>
        <field name="model">it.cg.new_project.stage</field>
        <field name="priority" eval="1" />
        <field name="arch" type="xml">
            <form string="Stage">
                <group>
                    <group>
                        <field name="name" />
                        <field name="fold" />
                        <field name="description" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="it_cg_new_project_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">it.cg.new_project.stage</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="erplibre_it.it_cg_new_project_stage_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Set a new stage in your new project</p>
        </field>
    </record>
</odoo>
