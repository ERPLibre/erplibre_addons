<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="it_new_project_view_form" model="ir.ui.view">
        <field name="name">it_new_project_form</field>
        <field name="model">it.cg.new_project</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <header>
                    <button class="oe_highlight" name="action_new_project" string="New project" type="object" />
                    <field name="stage_id" widget="statusbar" clickable="False" options="{'fold_field': 'fold'}" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="msg_error" />
                            <field name="has_error" />
                            <field name="execution_finish" />
                            <field name="module" />
                            <field name="directory" />
                            <field name="keep_bd_alive" />
                            <field name="config" />
                            <field name="code_generator_name" />
                            <field name="stop_execution_if_env_not_clean" />
                            <field name="it_workspace" />
                            <field name="template_name" />
                            <field name="coverage" />
                            <field name="odoo_config" />
                            <field name="force" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="it_new_project_view_graph" model="ir.ui.view">
        <field name="name">it_new_project_graph</field>
        <field name="model">it.cg.new_project</field>
        <field name="arch" type="xml">
            <graph string="It code generator module model field">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="it_new_project_view_kanban" model="ir.ui.view">
        <field name="name">it_new_project_kanban</field>
        <field name="model">it.cg.new_project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="it_new_project_view_pivot" model="ir.ui.view">
        <field name="name">it_new_project_pivot</field>
        <field name="model">it.cg.new_project</field>
        <field name="arch" type="xml">
            <pivot string="It code generator new project">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="it_new_project_view_search" model="ir.ui.view">
        <field name="name">it_new_project_search</field>
        <field name="model">it.cg.new_project</field>
        <field name="arch" type="xml">
            <search string="It code generator module model field">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <group expand="1" string="Group By">
                    <filter string="Stage" name="stage" context="{'group_by':'stage_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="it_new_project_view_tree" model="ir.ui.view">
        <field name="name">it_new_project_tree</field>
        <field name="model">it.cg.new_project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="it_new_project_action_window"
        name="Code generator new project"
        res_model="it.cg.new_project"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
