<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="it_exec_bundle_view_form" model="ir.ui.view">
        <field name="name">it_exec_bundle_form</field>
        <field name="model">it.exec.bundle</field>
        <field name="arch" type="xml">
            <form string="Bundle execution">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="toggle_active" type="object" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group string="IT">
                        <field name="it_workspace" />
                        <field name="it_exec_ids" />
                    </group>
                    <group string="Dependencies">
                        <field name="parent_id" />
                        <field name="child_ids" />
                    </group>
                    <group>
                        <group string="Date">
                            <field name="execution_finish" />
                            <field name="time_duration_result" />
                            <field name="exec_start_date" />
                            <field name="exec_stop_date" />
                            <field name="exec_time_duration" />
                            <field name="create_date" />
                            <field name="write_date" />
                        </group>
                        <group string="Info">
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="it_exec_bundle_view_graph" model="ir.ui.view">
        <field name="name">it_exec_bundle_graph</field>
        <field name="model">it.exec.bundle</field>
        <field name="arch" type="xml">
            <graph string="It code generator module model field">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="it_exec_bundle_view_kanban" model="ir.ui.view">
        <field name="name">it_exec_bundle_kanban</field>
        <field name="model">it.exec.bundle</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="it_exec_bundle_view_pivot" model="ir.ui.view">
        <field name="name">it_exec_bundle_pivot</field>
        <field name="model">it.exec.bundle</field>
        <field name="arch" type="xml">
            <pivot string="It code generator new project">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="it_exec_bundle_view_search" model="ir.ui.view">
        <field name="name">it_exec_bundle_search</field>
        <field name="model">it.exec.bundle</field>
        <field name="arch" type="xml">
            <search string="It code generator module model field">
                <field name="name" string="Name" />
                <field name="active" />
                <filter name="active" string="Active" domain="[('active','=',True)]" help="Show active" />
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]" help="Show inactive" />
                <group expand="1" string="Group By">
                    <filter string="Workspace" name="workspace" context="{'group_by':'it_workspace'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="it_exec_bundle_view_tree" model="ir.ui.view">
        <field name="name">it_exec_bundle_tree</field>
        <field name="model">it.exec.bundle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="time_duration_result" />
                <field name="execution_finish" />
                <field name="description" />
                <field name="it_workspace" />
                <field name="it_exec_ids" widget="many2many_tags" options="{'no_create':True}" />
            </tree>
        </field>
    </record>

    <act_window
        id="it_exec_bundle_action_window"
        name="IT executions bundle"
        res_model="it.exec.bundle"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
